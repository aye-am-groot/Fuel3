<h1>Current Items</h1>
<%= link_to 'New Item', new_item_path %>
<table>
    <tr>
        <th>Item</th>
        <th>Category</th>
        <th>Expiration</th>
        <th colspan="3"></th>
    </tr>
    <% @items.each do |item| %>
    <tr>
        <td><%= item.itemName %></td>
        <td><%= item.category %></td>
        <td><%= item.expiration %></td>
        <td><%= link_to 'Show', item_path(item) %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Delete', item_path(item), 
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this item? ' } %></td>
    </tr>
    <% end %>
</table>