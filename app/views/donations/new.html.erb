<h1>New Donation</h1>
<%= form_for :donation, url: donations_path do |f| %>

  <% if @donation.errors.any? %>
      <div id="error_explanation">
          <h2>
              <%=  pluralize(@donation.errors.count, "error") %> prohibited
              this item from being saved:
          </h2>
          <u1>
              <% @donation.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
          </u1>
      </div>
  <% end %>
  
  <p>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </p>
 
  <p>
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', donations_path %>