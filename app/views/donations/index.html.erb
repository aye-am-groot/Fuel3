<h1>List of Current Donations</h1>
<%= link_to 'New donation', new_donation_path %>
<table>
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th colspan="3"></th>
  </tr>
 
  <% @donations.each do |donation| %>
    <tr>
      <td><%= donation.item %></td>
      <td><%= donation.quantity %></td>
      <td><%= link_to 'Show', donation_path(donation) %></td>
      <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
      <td><%= link_to 'Delete', donation_path(donation), 
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>