= form_for @org do |f|
    - if @org.errors.any?
        #error_explanation
            %h2
                = pluralize(@org.errors.count, 'error')
                prohibited this organization from being saved:
            %u1
                - @org.errors.full_messages.each do |msg|
                    %li= msg
    %p
        = f.label :org_name
        %br/
        = f.text_field :org_name
    %p
        = f.label :address
        %br/
        = f.text_field :address
    %p
        = f.label :phone
        %br/
        = f.text_field :phone
    %p
        = f.label :contact_id
        %br/
        = f.text_field :contact_id
    %p
        = f.submit